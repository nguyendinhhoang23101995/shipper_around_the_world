<header class="navbar navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<%= link_to "SAW", root_path, id: "logo", style: 'color: white;' %>
		</div>
		<nav>
			<ul class="nav navbar-nav navbar-left">
				<% if logged_in? %>
					<li><a href="/index"><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>Find Ship</a></li>
				<% end %>
			</ul>
		</nav>
		<nav>
			<ul class="nav navbar-nav navbar-right">
				<% if logged_in? %>
					<li><%= link_to "Users", users_path %></li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<div class="ava"><%= gravatar_for current_user %></div> <div class="name"><%= current_user.name %> <b class="caret"></b></div>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "Profile", current_user %></li>
							<li><%= link_to "Settings", edit_user_path(current_user) %></li>
							<li class="divider"></li>
							<li>
								<%= link_to "Log out", logout_path, method: "delete" %>
							</li>
						</ul>
					</li>
				<% else %>
					<li><%= link_to "Sign in", login_path %></li>
					<li><%= link_to "Join", signup_path %></li>
				<% end %>
				<% if current_page?(root_path)%>
					<li><%= link_to "About", "#about-path", id: "about-link", class: "internal-link", onclick: "internal_link_click(this)" %></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>