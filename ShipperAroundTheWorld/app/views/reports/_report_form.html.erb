<div class="report-form">
	<h3>Report</h3>
	<% if contract.reports.nil? == false %>
		<% @reports = contract.reports %>
		<div class="reports-list">
			<ul>
				<% @reports.each do |report| %>	
					<% @user = User.find_by(id: report.user_id) %>
					<li><div class="name"><%= link_to "#{@user.name}", @user %>:</div><div class="content"><%= report.context %></div></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<% @report = Report.new %>
	<%= form_for(@report) do |f| %>
		<%= f.text_area :context, placeholder: "Content ..." %>
		<%= f.hidden_field :user_id, :value => current_user.id %>
		<%= f.hidden_field :contract_id, :value => params[:contract_id] %>
		<%= f.submit "Send", class: "btn btn-primary" %>
	<% end %>
</div>