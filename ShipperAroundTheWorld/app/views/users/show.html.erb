<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user-info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<div id="user-email">
				<% if current_user != @user %>
					<div class="title">Email:</div><%= @user.email %>
				<% end %>
			</div>
		</section>
		<section >
			<% if current_user.id == @user.id %>
				<%= render 'shared/request_form'%>
			<% end %>
		</section>
	</aside>
	<div class="col-md-8">
		<% if @user.requests.any? %>
			<h3 style="margin-left: 50px;">Requests(<%= @user.requests.count %>)</h3>
			<ol class="requests-list">
				<%= render @requests %>
			</ol>
			<%= will_paginate @requests %>
		<% end %>
	</div>
</div>