<li>
	<%= gravatar_for user, size: 100 %>
	<div class="name"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%=  user.name %></div>
	<br>
	<div class="email"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> <%= user.email %></div>
	<br>
	<div class="phone"><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> <%= user.phonenumber %></div>
	<br>
	<%= link_to "View Profile", user, class: "btn-custom" %>
	<% if current_user.admin? && !current_user?(user) %>
		<%= link_to "Delete Account", user, method: :delete, data: { confirm: "You sure?" }, class: "btn-custom" %>
	<% end %>
</li>